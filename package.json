{
  "name": "performance-snapshot-auto-runner",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "exports": "./src/index.ts",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest",
    "start": "node --loader ts-node/esm ./src/index.ts  --settings ./settings.yaml",
    "dev": "nodemon --ext ts --loader ts-node/esm --experimental-specifier-resolution node src",
    "build": "esbuild src/index.ts --bundle --outfile=build/performance-snapshot.cjs --platform=node --log-limit=0 --sourcemap",
    "pm2": "pm2 start ecosystem.config.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/r3634/performance-snapshot-auto-runner.git"
  },
  "author": "RPCuk",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/r3634/performance-snapshot-auto-runner/issues"
  },
  "homepage": "https://gitlab.com/r3634/performance-snapshot-auto-runner#readme",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "collectCoverage": true,
    "coverageDirectory": "tests/coverage",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "axios": "1.7.7",
    "ramda": "0.30.1",
    "typescript": "5.6.3",
    "yaml": "2.6.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "22.8.7",
    "@types/ramda": "0.30.2",
    "@types/yargs": "17.0.33",
    "jest": "29.7.0",
    "jest-extended": "4.0.2",
    "nodemon": "3.1.7",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typedoc": "0.26.11"
  }
}
